<body class="profile-page">
    

    <header>
		<% include ../partials/header %>
	</header>
    <div class="page-header header-filter" data-parallax="true" style="background-image:url('http://wallpapere.org/wp-content/uploads/2012/02/black-and-white-city-night.png');"></div>
    <div class="main main-raised">
		<div class="profile-content">
            <div class="container">
                <div class="row">
	                <div class="col-md-6 ml-auto mr-auto">
        	           <div class="profile">
	                        <div class="avatar">
	                            <img src="<%=pcbg[index].pic%>" alt="Circle Image" class="img-raised rounded-circle img-fluid">
	                        </div>
	                        <div class="name">

                                <h3 class="title"><%=pcbg[index].first_name%> <%=pcbg[index].last_name%> (<%=pcbg[index].preferred_name%>)</h3>
                                
                                <h6><%=pcbg[index].relation%> - <%=pcbg[index].major_or_program%> â€” <%=pcbg[index].location%></h6>
                                
                                <a href= "tel:<%=pcbg[index].phone%>" class="btn btn-just-icon btn-link btn-phone"><i class="fa fa-phone"></i></a>
                                <a href= "mailto: <%=pcbg[index].email%>" class="btn btn-just-icon btn-link btn-email"><i class="fa fa-envelope-o"></i></a>
                                <a href= "<%=pcbg[index].external_link%>" class="btn btn-just-icon btn-link btn-email"><i class="fa fa-link"></i></a>

	                        </div>
	                    </div>
    	            </div>
                </div>
                
                <div class="description text-center">
                    <p><%=pcbg[index].occupation%></p>
                    <a class="btn btn-success" href="/editprofile$<%=pcbg[index].uid-1%>">Edit</a>

                </div>

				<div class="row">
					<div class="col-md-6 ml-auto mr-auto">
                </div>
                
                
                
            </div>

        
            </div>
