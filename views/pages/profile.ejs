<head>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Material+Icons">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css"
    href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons">
  <link rel="stylesheet" href="../../public/profilepage/styles/profileStyle.css">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" type="text/css" href="../public/main.css">
</head>

<body>
  <header>
    <% include ../partials/header %>
  </header>
  <div class="profile-page">
    <div class="page-header header-filter" data-parallax="true"
      style="background-image:url('https://iili.io/JG4m8P.jpg');"></div>
    <div class="main main-raised">
      <div class="profile-content">
        <div class="container">
          <div class="row">
            <div class="col-md-6 ml-auto mr-auto">
              <div class="profile">
                <div class="avatar">
                  <img src="<%=pcbg[index].pic%>" alt="Circle Image" class="img-raised rounded-circle img-fluid">
                </div>
                <div class="name">

                  <h3 class="title"><%=pcbg[index].first_name%> <%=pcbg[index].last_name%>
                    (<%=pcbg[index].preferred_name%>)</h3>
                  <a href="tel:<%=pcbg[index].phone%>" class="btn btn-just-icon btn-link btn-phone"><i
                      class="fa fa-phone"></i></a>
                  <a href="mailto: <%=pcbg[index].email%>" class="btn btn-just-icon btn-link btn-email"><i
                      class="fa fa-envelope-o"></i></a>
                  <a href="<%=pcbg[index].external_link%>" class="btn btn-just-icon btn-link btn-email"><i
                      class="fa fa-link"></i></a>

                  <h6><%=pcbg[index].relation%> - <%=pcbg[index].department%></h6>
                  <h6><%=pcbg[index].major_or_program%>, Class of <%=pcbg[index].graduation_year%></h6>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="description text-center">
              <p><%=pcbg[index].occupation%> at <%=pcbg[index].organization%></p>
              <p><%=pcbg[index].location%></p>
              <%if(locals.user) {%>
              <p>FLAGGED? (ADMIN ONLY): <%=pcbg[index].marked%></p>
              <%}%>
            <%if(locals.user) {%>
              <a class="btn btn-success" href="/editprofile$<%=pcbg[index].uid-1%>">Edit</a>
              <a class="btn btn-danger" href="/deleteprofile$<%=pcbg[index].uid-1%>">Delete</a>
              <%}%>

              <a class="btn btn-success" href="/requestedit">Request Edit</a>
              <form action="/profile$<%=pcbg[index].uid-1%>" method="post" class="needs-validation" novalidate>
              <button type="submit" id="flagButton" class="btn btn-danger" value="submit">Flag Suspicious
                Profile</button>
              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Background Pre-loader -->
  <div style="width: 0; height: 0; overflow: hidden">
    <img src="" width="1" height="1"> <img src="https://iili.io/JG4m8P.jpg" width="1" height="1">
  </div>

  <script>
    document.getElementById("flagButton").addEventListener("click", displaySent);

    function displaySent() {
      console.log("1")
      alert("Thank you for your feedback! An alert email has been sent.");
    }


  </script>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://unpkg.com/popper.js@1.12.6/dist/umd/popper.js"
    integrity="sha384-fA23ZRQ3G/J53mElWqVJEGJzU0sTs+SvzG8fXVWP+kJQ1lwFAOkcUOysnlKJC33U"
    crossorigin="anonymous"></script>
  <script src="https://unpkg.com/bootstrap-material-design@4.1.1/dist/js/bootstrap-material-design.js"
    integrity="sha384-CauSuKpEqAFajSpkdjv3z9t8E7RlpJ1UP0lKM/+NdtSarroVKu069AlsRPKkFBz9"
    crossorigin="anonymous"></script>

  <footer>
    <% include ../partials/footer %>
  </footer>

</body>